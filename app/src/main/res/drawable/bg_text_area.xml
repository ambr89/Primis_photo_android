<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="@dimen/margin_button"
        android:left="@dimen/margin_button"
        android:right="@dimen/margin_button"
        android:top="@dimen/margin_button">
        <selector>
            <item android:state_pressed="true">
                <shape>
                    <corners
                        android:bottomLeftRadius="@dimen/radius"
                        android:bottomRightRadius="@dimen/radius"
                        android:radius="@dimen/radius"
                        android:topLeftRadius="@dimen/radius"
                        android:topRightRadius="@dimen/radius"/>
                    <solid android:color="@color/white"/>
                    <stroke
                        android:width="1dip"
                        android:color="@color/blue_btn"/>
                    <padding
                        android:bottom="0px"
                        android:left="@dimen/general_padding"
                        android:right="@dimen/general_padding"
                        android:top="0px"/>
                </shape>
            </item>
            <item
                android:state_focused="true">
                <shape>
                    <corners
                        android:bottomLeftRadius="@dimen/radius"
                        android:bottomRightRadius="@dimen/radius"
                        android:radius="@dimen/radius"
                        android:topLeftRadius="@dimen/radius"
                        android:topRightRadius="@dimen/radius"/>
                    <solid android:color="@color/white"/>
                    <stroke
                        android:width="1dip"
                        android:color="@color/blue_btn"/>
                    <padding
                        android:bottom="0px"
                        android:left="@dimen/general_padding"
                        android:right="@dimen/general_padding"
                        android:top="0px"/>
                </shape>
            </item>

            <item android:state_enabled="false">
                <shape>
                    <corners
                        android:bottomLeftRadius="@dimen/radius"
                        android:bottomRightRadius="@dimen/radius"
                        android:radius="@dimen/radius"
                        android:topLeftRadius="@dimen/radius"
                        android:topRightRadius="@dimen/radius"/>
                    <solid android:color="@color/white_disable"/>
                    <stroke
                        android:width="1dip"
                        android:color="@color/candidate_other"/>
                    <padding
                        android:bottom="0px"
                        android:left="@dimen/general_padding"
                        android:right="@dimen/general_padding"
                        android:top="0px"/>
                </shape>
            </item>

            <item>
                <shape>
                    <corners
                        android:bottomLeftRadius="@dimen/radius"
                        android:bottomRightRadius="@dimen/radius"
                        android:radius="@dimen/radius"
                        android:topLeftRadius="@dimen/radius"
                        android:topRightRadius="@dimen/radius"/>
                    <solid android:color="@color/white"/>
                    <stroke
                        android:width="1dip"
                        android:color="@color/candidate_other"/>
                    <padding
                        android:bottom="0px"
                        android:left="@dimen/general_padding"
                        android:right="@dimen/general_padding"
                        android:top="0px"/>
                </shape>
            </item>
        </selector>
    </item>
</layer-list>